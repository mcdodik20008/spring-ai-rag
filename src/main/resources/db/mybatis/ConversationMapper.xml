<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mcdodik.springai.db.mybatis.mapper.ConversationMapper">

    <select id="findById" resultType="mcdodik.springai.db.entity.user.ConversationRecord">
        SELECT id, user_id as userId, title, created_at FROM conversations WHERE id = #{id}
    </select>

    <select id="findByUserId" resultType="mcdodik.springai.db.entity.user.ConversationRecord">
        SELECT id, user_id as userId, title, created_at FROM conversations WHERE user_id = #{userId} ORDER BY created_at DESC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO conversations (user_id, title) VALUES (#{userId}, #{title})
    </insert>

</mapper>
