<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mcdodik.springai.db.mybatis.mapper.UserMapper">

    <select id="findByLogin" resultType="mcdodik.springai.db.entity.user.UserRecord">
        SELECT id, login, created_at FROM users WHERE login = #{login}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO users (login) VALUES (#{login})
    </insert>

</mapper>
